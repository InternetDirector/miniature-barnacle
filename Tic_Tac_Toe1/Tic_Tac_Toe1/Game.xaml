<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tic_Tac_Toe1.Game">
    <ContentPage.Content>
        <StackLayout Padding="0" Margin="0">
            <Label Text="X     0"
                HorizontalOptions="CenterAndExpand" BackgroundColor="DeepSkyBlue" FontSize="24" />
            <Label Text="{Binding ScoreT}"
                HorizontalOptions="CenterAndExpand" BackgroundColor="DeepSkyBlue" FontSize="20"/>
            <FlexLayout  Margin="20" x:Name="Forbuttons"  VerticalOptions="Center" Wrap="Wrap"  HorizontalOptions="CenterAndExpand"></FlexLayout>
            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand">
                <Button Text="Обнулить счёт" Clicked="Refresh_sc"/>
                <StackLayout Orientation="Horizontal">
                    <Button Text="3x3" FontSize="40" Clicked="Bt_SizeTh"/>
                    <Button Text="4x4" FontSize="40" Clicked="Bt_SizeF"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>